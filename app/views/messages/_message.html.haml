.message
  .message__top
    .message__user
      = message.user.name
    .message__date
      = message.created_at.strftime('%Y年%m月%d日 %H:%M:%S')
    .clear
    .message__comment
    - if message.content.present?
      = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?
